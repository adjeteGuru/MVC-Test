@model MVC_Test.Models.ViewModels.BookingType

@using (Ajax.BeginForm("BookingTypePartial", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "CreateBooking", InsertionMode = InsertionMode.Replace }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h4>Select a booking type to add</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.JobId)
        <div class="form-group">
            @Html.LabelFor(model => model.SelectedBookingType, htmlAttributes: new { @class = "control-label col-md-2", id = "BookingTypeLabel" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedBookingType, new SelectList(Model.BookingTypes, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "BookingTypes" })
                @Html.ValidationMessageFor(model => model.SelectedBookingType, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Select" class="btn btn-primary" />
            </div>
        </div>
    </div>
}




