@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
            $('#Client').change(function () {
                var selectedClient = $("#Client").val();
                var clientsSelect = $('#Client');
                clientsSelect.empty();
                if (selectedClient != null && selectedClient != '') {
                    $.getJSON('@Url.Action("GetClients")', { id: selectedClient }, function (clients) {
                        if (clients != null && !jQuery.isEmptyObject(clients))
                        {
                            clientsSelect.append($('<option/>', {
                                value: null,
                                text: ""
                            }));
                            $.each(clients, function (index, client) {
                                clientsSelect.append($('<option/>', {
                                    value: client.Value,
                                    text: client.Text
                                }));
                            });
                        };
                    });
                }
            });
    </script>
